{
  "compilerOptions": {
    "target": "ESNext",              // 최신 JS 기능을 그대로 사용
    "module": "ESNext",              // ESM 모듈 형식으로 출력
    "moduleResolution": "node",      // Node 스타일 경로 해석 (browser-compatible)
    "rootDir": "public/ts",          
    "outDir": "public/js",
    "strict": true,
    "esModuleInterop": true,         // import/require 호환
    "skipLibCheck": true,
    "lib": ["DOM", "ESNext"],        // DOM API 타입 포함
  },
  "include": ["public/ts/**/*"]      // 컴파일할 TS 파일 위치
}
